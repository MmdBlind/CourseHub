@model CourseHub.Areas.Admin.Models.ViewModels.CreateAndEditCategoryViewModel
<form method="post">
    <div class="card">
        <div class="card-body">

            <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post" dir="rtl">
                @Html.AntiForgeryToken()

                <!-- خطاهای کلی فرم (اختیاری) -->
                <div asp-validation-summary="ModelOnly" class="field-error mb-2"></div>

                <div class="form-field">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" placeholder="مثلاً: برنامه‌نویسی وب" />
                    <span class="field-error" asp-validation-for="Name"></span>
                </div>

                <div class="form-field input-with-icon">
                    <label class="form-label" asp-for="Slug"></label>
                    <i class="bi bi-hash icon" aria-hidden="true"></i>
                    <input asp-for="Slug" class="form-control" placeholder="barname-nevisi-web" />
                    <span class="field-error" asp-validation-for="Slug"></span>
                </div>

                <div class="form-field">
                    <label class="form-label" asp-for="ParentID">والد (اختیاری)</label>
                    <select class="form-select" asp-for="ParentID" asp-items="Model.ParentOption"></select>
                    <span class="field-hint">می‌تونی این دسته را زیرمجموعهٔ یک دستهٔ دیگر قرار بدی.</span>
                    <span class="field-error" asp-validation-for="ParentID"></span>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">ثبت</button>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-light">انصراف</a>
                </div>
            </form>

        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(function () {
          $('#Slug').on('input', function () {
            let v = $(this).val();

            v = v
              .toLowerCase()
              // هر نوع فاصله (space/NBSP/نیم‌فاصله/ZWJ) → '-'
              .replace(/[\s\u00A0\u200C\u200D]+/g, '-')
              // هر کاراکتر غیرمجاز → '-'  (فقط حروف/اعداد فارسی‌و‌لاتین و خط تیره مجازه)
              .replace(/[^a-z0-9\u0600-\u06FF-]/g, '-')
              // هر تعداد '-' پشت‌سرهم → یک '-'
              .replace(/-+/g, '-');

            $(this).val(v);
          });
        });
    </script>

}

