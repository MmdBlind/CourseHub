@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title | CourseHub Admin</title>

    <!-- Bootstrap 5 (با RTL ساده با dir="rtl") -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons (اختیاری) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.slim.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- نوار بالا -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-speedometer2"></i> پنل مدیریت
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!-- فضای خالی -->
                </ul>
                <div class="d-flex align-items-center gap-3">
                    <span class="text-secondary small">سلام ادمین</span>
                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">
                        مشاهدهٔ سایت
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <!-- سایدبار -->
            <aside class="col-12 col-md-3 col-lg-2 bg-white border-end min-vh-100 p-0">
                <div class="list-group list-group-flush py-2">
                    <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-house"></i> داشبورد
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="Courses" asp-action="Index">
                        <i class="bi bi-journal-text"></i> دوره‌ها
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                        <i class="bi bi-diagram-3"></i> دسته‌بندی‌ها
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="Teachers" asp-action="Index">
                        <i class="bi bi-people"></i> مدرس‌ها
                    </a>
                </div>
            </aside>

            <!-- محتوای مرکزی -->
            <main class="col-12 col-md-9 col-lg-10 p-4">
                @RenderSection("Breadcrumb", required: false)

                <div class="card shadow-sm">
                    <div class="card-body" style="display: flex; flex-direction:column; gap: 10px">
                        @RenderBody()
                    </div>
                </div>

                <footer class="text-muted small mt-4">
                    © @DateTime.Now.Year CourseHub — Admin Panel
                </footer>
            </main>

        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>